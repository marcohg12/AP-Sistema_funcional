<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <title></title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg" style="background-color: #283618;">
            <div class="container">
              <div class="collapse navbar-collapse" id="navbarButtonsExample" >
                
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                  <li class="nav-item me-4">
                    <a class="nav-link text-white fw-bold" href="">Hoteles</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Ofertas</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Mis reservas</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Hoteles favoritos</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Mi perfil</a>
                  </li>
                </ul>
                
                <form method="POST" action="">
                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn me-3" style="background-color: #dda15e;">Cerrar sesión</button>
                  </div>
                </form>
              
              </div>
            </div>
        </nav>

        <section class="mb-4">
          <div class="container mt-4">

            <div class="row row-cols-2">
              <div class="col-lg-3 me-5">

                <h4 class="card-title mb-3">Habitaciones</h4>

                <% rooms.forEach( room => {%>
                <div class="card mb-4">
                  <div class="card-body">

                    <h5 class="card-title"><%= room.name %></h5>
                    <p class="card-text">Precio por noche: <%= room.price%></p>
                    <p class="card-text"><small class="text-muted">Capacidad: <%= room.capacity%></small></p>
                    <a href="" class="btn text-white" style="background-color: #606c38;">Ver más</a>
                    <a href="" class="btn btn-danger">Eliminar</a>
    
                  </div>
                </div>
                <% }) %>

              </div>

              <div class="col-lg-8">

                <h4 class="card-title mb-3">Seleccione su tiempo de estadía</h4>

                <div class="card mb-4">
                  <div class="card-body">

                    <form>

                      <div class="row row-cols-2">
                        <div class="col">

                          <div class="form-outline mb-4">
                            <input type="date" id="check_in_date" name="check_in_date" required class="form-control form-control-lg" />
                            <label class="form-label">Fecha de check-in</label>
                          </div>

                        </div>

                        <div class="col">

                          <div class="form-outline mb-4">
                            <input type="date" id="check_out_date" name="check_out_date" required class="form-control form-control-lg" />
                            <label class="form-label">Fecha de check-out</label>
                          </div>

                        </div>
                      </div>

                      <div class="pt-1 mt-4 mb-4 me-4">
                        <button class="btn btn-dark btn-lg btn-block" type="submit">Siguiente</button>
                      </div>

                    </form>

                  </div>
                </div>


              </div>
            </div>

          </div>
        </section>

    </body>
</html>