<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <title></title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg" style="background-color: #283618;">
            <div class="container">
              <div class="collapse navbar-collapse" id="navbarButtonsExample" >
                
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Hoteles</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Ofertas</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Mis reservas</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Hoteles favoritos</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="">Mi perfil</a>
                  </li>
                </ul>
                
                <form method="POST" action="">
                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn me-3" style="background-color: #dda15e;">Cerrar sesión</button>
                  </div>
                </form>
              
              </div>
            </div>
        </nav>

        <section class="mt-4 mb-4" id="content">

          <div class="container">

          <!--------------------------------------------------------------------------------------------------------------------------->

            <div class="card mb-3">

              <div class="carousel slide"  data-bs-ride="carousel">
                <div class="carousel-inner">

                  <div class="carousel-item active">
                    <img class="d-block w-100 card-img" style="height: 400px" src="../Photos/download.jpg" alt="First slide">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100 card-img" style="height: 400px" src="../Photos/hotel-presidente-4s.jpg" alt="Second slide">
                  </div>

                </div>
              </div>

              <div class="card-body">

                <h3 class="card-title"><%= hotel_name %></h3>
                <p class="card-text"><%= hotel_classification %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
                                         Promedio de calificación: <%= hotel_review_avg %></p>

                <button class="btn btn-outline-secondary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_amenities" aria-expanded="false" aria-controls="collapse_amenities">Amenidades</button>

                <div class="collapse" id="collapse_amenities">
                <div class="row mb-3 mt-3 text-center">
                  <% for (i in amenities){ %>
                    <div class="col-lg-3 col-md-6 mb-5 mb-md-5 mb-lg-0 position-relative">
                      <h6 class="fw-normal mb-4"><%= amenities[i] %></h6>
                      <% if (i == 0 || i % 3 != 0){ %>
                      <div class="vr vr-blurry position-absolute my-0 h-50 d-none d-md-block top-0 end-0"></div>
                      <% } %>
                    </div>
                <% } %>
                </div>
              </div>


              <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_payment_methods"
                      aria-expanded="false" aria-controls="collapse_payment_methods">Métodos de pago</button>

              <div class="collapse" id="collapse_payment_methods">
                <div class="row mb-3 mt-3 text-center">
                  <% for (i in payment_methods){ %>
                    <div class="col-lg-3 col-md-6 mb-5 mb-md-5 mb-lg-0 position-relative">
                      <h6 class="fw-normal mb-4"><%= payment_methods[i] %></h6>
                      <% if (i == 0 || i % 3 != 0){ %>
                      <div class="vr vr-blurry position-absolute my-0 h-50 d-none d-md-block top-0 end-0"></div>
                      <% } %>
                    </div>
                <% } %>
                </div>
              </div>

              </div>

              <div class="card-footer">
                <p class="card-text"><small><%= hotel_address %></small></p>
              </div>

            </div>

            <!---------------------------------------------------------------------------------------------------------------------->

            <div class="card mt-4 mb-4">

              <div class="card-body">

                <h3 class="card-title mb-3">Ofertas</h3>

                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  
                  <div class="carousel-inner">

                  <% offers.forEach( (offer, i) => {%>
                    <% console.log(i); if (i == 0){ %>
                      <div class="carousel-item active">
                    <% } else { %>
                      <div class="carousel-item">
                    <% } %>
                      <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"><%= offer.name %></h4>
                            <div class="card-text">
                              Desde el: <%= offer.initial_date%> &nbsp;&nbsp;&nbsp;
                              Hasta el: <%= offer.ending_date%>
                            </div>
                            <a href="" class="btn btn-outline-secondary mt-2">Ver Detalles</a>
                        </div>
                      </div>
                    </div>
                    <% }) %> 

                </div>

                <button class="btn btn-secondary btn-sm mt-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="btn btn-secondary btn-sm mt-2" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                  <span class="carousel-control-next-icon"></span>
                </button>
              </div>

            </div>
          </div>

        <!---------------------------------------------------------------------------------------------------------------------->

        <div class="card mt-4 mb-4">
          <div class="card-body">

            <h3 class="card-title mb-3">Habitaciones</h3>

            <div class="row mb-3 mt-3 text-center">
            <% rooms.forEach( room => { %>
              <div class="col-lg-3 col-md-6 mb-5 mb-md-5 mb-lg-0 position-relative">
              <div class="fw-normal card mt-2 mb-2">
                <div class="card-body">

                  <h5 class="card-title"><%= room.name %></h5>
                  <p class="card-text">Precio por noche: <%= room.price%></p>
                  <p class="card-text"><small class="text-muted">Capacidad: <%= room.capacity%></small></p>
                  <a href="" class="btn text-white" style="background-color: #606c38;">Ver más</a>
  
                </div>
              </div>
            </div>
            <% }) %>
          </div>

          </div>
        </div>

        <!---------------------------------------------------------------------------------------------------------------------->

        </div>
      </section>

    </body>
</html>