<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <title>Reserva</title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg" style="background-color: #283618;">
            <div class="container">
              <div class="collapse navbar-collapse" id="navbarButtonsExample" >

                <div class="flex-shrink-0 me-4">
                  <% if (profile) { %>
                    <img src="data:image/png;base64, <%= profile %>"
                    class="img-fluid rounded-circle border border-white border-3"
                    style="width: 50px;">
                  <% } else {%>
                    <img src="/Photos/default_profile.png"
                    class="img-fluid rounded-circle border border-white border-3"
                    style="width: 50px;">
                  <% } %>
                </div>
                
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="/hotel_admins">Menú Principal</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="/my_account/my_profile_1">Mi perfil</a>
                  </li>
                </ul>
                
                <form method="POST" action="/logout">
                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn me-3" style="background-color: #dda15e;">Cerrar sesión</button>
                  </div>
                </form>
              
              </div>
            </div>
        </nav>

        <!--------------------------------------------------------------------------------------------------------------------------->

        <section class="mb-4">
          <div class="container mt-4">

            <div>

              <div class="d-flex align-items-center mb-4 pb-1">
                <span class="h2 fw-bold mb-0">Habitaciones de la reserva</span>
              </div>

              <div class="mb-4">
                <div class="row">
  
                  <div class="col">
                    <div style="max-height: 600px; display: block; overflow: auto; position: relative;">
  
                      <% rooms.forEach( room => {%>
                        <div class="card mb-4" id="room-<%= room.id %>">
                          <div class="card-body">
        
                            <h5 class="card-title"><%= room.name %></h5>
                            <p class="card-text">Precio por noche: <%= room.price%></p>
                            <p class="card-text"><small class="text-muted">Capacidad: <%= room.capacity%></small></p>
                            <p class="card-text"><small class="text-muted">Unidades: <%= room.units%></small></p>
                            <button onclick="javascript:display_pop_up('<%= room.price %>', '<%= room.units %>', '<%= room.id %>', '<%= room.name %>')" class="btn text-white" style="background-color: #606c38;">Agregar</button>
    
                          </div>
                        </div>
                        <% }) %>
  
                    </div>
                  </div>
  
                  <div class="col">
                    <div style="max-height: 600px; display: block; overflow: auto; position: relative;" id="rooms_in_reservation">

                      <% rooms.forEach( room => {%>
                        <div class="card mb-4" id="room-<%= room.id %>">
                          <div class="card-body">
        
                            <h5 class="card-title"><%= room.name %></h5>
                            <p class="card-text">Precio por noche: <%= room.price%></p>
                            <p class="card-text"><small class="text-muted">Capacidad: <%= room.capacity%></small></p>
                            <p class="card-text"><small class="text-muted">Unidades: <%= room.units%></small></p>
                            <button onclick="javascript:delete_room_from_bookin(event, '<%= room.id %>')" class="btn btn-danger">Eliminar</button>
    
                          </div>
                        </div>
                        <% }) %>

                    </div>
                  </div>
  
                </div>
              </div>

              <div class="mt-4">
                <a href="/hotel_admins/bookin_catalog" class="btn btn-outline-secondary btn-lg me-4">Regresar</a>
              </div>

            </div>

          <!-- Pop up para la edición de la habitación -->
          <div class="modal fade" id="edition_modal" tabindex="-1" aria-labelledby="edition_modal" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="modal_title"></h1>                       
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div id="modal_content"></div>

                </div>
              </div>
            </div>
          
          </div>
        </section>

    </body>
    <script>

      // Función para desplegar el pop up de la habitación
      function display_pop_up(room_price, room_units, room_id, room_name){

        const modal_content = `
        
          <form onsubmit="javascript:add_room_to_bookin(event, ${room_id})">
            <div class="modal-body">

              <div class="form-outline mb-4">
                <input type="text" id="pop-up-price" name="pop-up-price" value="${room_price}" class="form-control" required/>
                <label class="form-label">Precio</label>
              </div>

              <div class="form-outline mb-4">
                <input type="number" id="pop-up-units" name="pop-up-units" min="1" max="${room_units}" value="1" class="form-control" required/>
                <label class="form-label">Unidades</label>
              </div>
                
            </div>
                                            
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn text-white" style="background-color: #606c38;">Agregar</button>
            </div>

          </form>
        `

        document.getElementById("modal_content").innerHTML = modal_content
        document.getElementById("modal_title").innerHTML = `Agregar ${room_name}`
        $('#edition_modal').modal('show')
      }

      // Envía una petición http al servidor y retorna la respuesta si hubo éxito
      function send_request(request_type, url, request_body){
            
            return new Promise(async (resolve, reject) => {

                const http = new XMLHttpRequest()
                
                http.onreadystatechange = function(){
                    
                    if (this.readyState == 4 && this.status == 200){
                        const response = JSON.parse(this.response)
                        return resolve(response)    
                    }
                }

                http.open(request_type, url)
                http.setRequestHeader("Content-Type", "application/json;charset=UTF-8")
                http.send(JSON.stringify(request_body))
            })
      }

      // Función para agregar una habitación a la reserva
      function add_room_to_bookin(event, room_id){
        event.preventDefault()
        const response = null
        alert(response.message)
        location.reload()
      }

      // Función para eliminar una habitación de la reserva
      function delete_room_from_bookin(event, room_id){
        event.preventDefault()
        const response = null
        alert(response.message)
        location.reload()
      }

    </script>
</html>