<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <title>Catálogos</title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg" style="background-color: #283618;">
            <div class="container">
              <div class="collapse navbar-collapse" id="navbarButtonsExample" >

                <div class="flex-shrink-0 me-4">
                  <% if (profile.length != 0) { %>
                    <img src="data:image/png;base64, <%= profile %>"
                    class="img-fluid rounded-circle border border-white border-3"
                    style="width: 50px;">
                  <% } else {%>
                    <img src="/Photos/default_profile.png"
                    class="img-fluid rounded-circle border border-white border-3"
                    style="width: 50px;">
                  <% } %>
                </div>
                
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="/master_admins">Menú Principal</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="/my_account/my_profile_1">Mi perfil</a>
                  </li>
                </ul>
                
                <form method="POST" action="/logout">
                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn me-3" style="background-color: #dda15e;">Cerrar sesión</button>
                  </div>
                </form>
              
              </div>
            </div>
        </nav>

        <!--------------------------------------------------------------------------------------------------------------------------->

        <section class="mb-4 mt-4">
            <div class="container">

                <div class="d-flex align-items-center pb-1">
                    <span class="h3 fw-bold mb-0 me-4">Géneros</span>

                    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#registration_modal">
                        Registrar
                    </button>

                </div>

                <div style="height: 600px; display: block; overflow: auto; position: relative;">

                <table class="table mt-4 table-striped table-bordered">
                    <thead class="bg-light">
                      <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                      </tr>
                    </thead>

                    <tbody>

                      <% genders.forEach(gender => {%>

                        <tr id="<%= gender.id %>">
                            <td style="width: 50%">
                              <p class="fw-normal mb-1"><%= gender.name %></p>
                            </td>
                            
                            <td id="buttons-1">
                                
                                <button type="button" class="btn btn-link btn-sm btn-rounded" onclick="javascript:edit_row('<%= gender.id %>', '<%= gender.name %>')">
                                    Editar
                                </button>

                                <button type="button" class="btn btn-link btn-sm btn-rounded" onclick="javascript:delete_gender('<%= gender.id %>')">
                                   Eliminar
                                </button>
                            </td>
                        </tr>
                        
                      <%})%>

                    </tbody>
                  </table>

                </div>

                  <!-------------------------------------------------------------------------------------------------------->

                  <!-- Pop up para la edición de género -->
                  <div class="modal fade" id="edition_modal" tabindex="-1" aria-labelledby="edition_modal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            
                            <div class="modal-header">
                                <h1 class="modal-title fs-5">Editar género</h1>
                                
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            
                            <section id="edition_modal_body">
                            </section> 

                        </div>
                    </div>
                 </div>

                 <!-- Pop up para el registro de género -->
                 <div class="modal fade" id="registration_modal" tabindex="-1" aria-labelledby="registration_modal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            
                            <div class="modal-header">
                                <h1 class="modal-title fs-5">Registrar género</h1>
                                
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            <form onsubmit="javascript:register_gender()">
                                <div class="modal-body">

                                    <div class="form-outline mb-4">
                                        <input type="text" id="register_name" name="register_name" class="form-control" required/>
                                        <label class="form-label">Nombre</label>
                                    </div>
                
                                </div>
                                            
                                <div class="modal-footer">
                                    
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn text-white" style="background-color: #606c38;">Registrar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                 </div>

            </div>
        </section>

    </body>

    <script>
    
        // Habilita el pop up para editar un género
        function edit_row(gender_id, gender_name){

            const modal_content = `         
            
            <form onsubmit="javascript:update_gender(${gender_id})">       
                <div class="modal-body">

                    <div class="form-outline mb-4">
                        <input type="text" id="new_name" name="new_name" value="${gender_name}" required class="form-control"/>
                        <label class="form-label">Nombre</label>
                    </div>

                </div>
                            
                <div class="modal-footer">        
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn text-white" style="background-color: #606c38;">Guardar</button>
                </div>
            </form>
            `

            document.getElementById("edition_modal_body").innerHTML = modal_content
            $('#edition_modal').modal('show')
        }

        // Envía una petición http al servidor y retorna la respuesta si hubo éxito
        function send_request(request_type, url, request_body){
            
            return new Promise(async (resolve, reject) => {

                const http = new XMLHttpRequest()
                
                http.onreadystatechange = function(){
                    
                    if (this.readyState == 4 && this.status == 200){
                        const response = JSON.parse(this.response)
                        return resolve(response)    
                    }
                }

                http.open(request_type, url)
                http.setRequestHeader("Content-Type", "application/json;charset=UTF-8")
                http.send(JSON.stringify(request_body))
            })
        }

        // Envía la petición para editar el género
        async function update_gender(gender_id){
            
            const url = "http://localhost:4500/master_admins/update_gender"
            const new_name = document.getElementById("new_name").value
            const request_body = {gender_id: gender_id, new_name: new_name}
            const response = await send_request("POST", url, request_body)

            alert(response.message)
        }

        // Envía la petición para eliminar un género
        async function delete_gender(gender_id) {

            const url = "http://localhost:4500/master_admins/delete_gender"
            const request_body = {gender_id: gender_id}
            const response = await send_request("POST", url, request_body)
            
            alert(response.message)
            if (!response.error){
                document.getElementById(gender_id).remove()
            }    
        }

        // Envía la petición para registrar un género
        async function register_gender() {
            const url = "http://localhost:4500/master_admins/register_gender"
            const name = document.getElementById("register_name").value
            const request_body = {name: name}
            const response = await send_request("POST", url, request_body)

            alert(response.message)
        }

    </script>
</html>