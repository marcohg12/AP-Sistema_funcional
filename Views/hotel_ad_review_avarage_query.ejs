          </div>

            <div style="height: 600px; display: block; overflow: auto; position: relative;">
                <table class="table mt-4 table-striped table-bordered">
                    <thead class="bg-light">
                      <tr>
                        <th>Nombre</th>
                        <th>Fecha de check in</th>
                        <th>Fecha de check out</th>
                        <th>Review</th>
                        <th>Comentarios</th>
                      </tr>
                    </thead>
    
                    <tbody>

                        <tr>
                            <td>
                                <p>Marco Herrera</p>
                            </td>

                            <td>
                                <p>2023-04-01</p>
                            </td>

                            <td>
                                <p>2023-04-04</p>
                            </td>

                            <td>
                                <div class="card-body">
                                  <% for(i = 0; i < 5; i++){ %>
                                    <span class = "fa fa-star checked"></span> 
                                  <% } %>

                                </div>
                            </td>

                            <td>
                              <a href="" data-bs-toggle="modal" data-bs-target="#registration_modal">Ver comentarios</a>
                          </td>
                        </tr>

                        <tr>
                          <td>
                              <p>Cristina Solís</p>
                          </td>

                          <td>
                              <p>2023-04-01</p>
                          </td>

                          <td>
                              <p>2023-04-03</p>
                          </td>

                          <td>
                              <div class="card-body">
                                <% for(i = 0; i < 4; i++){ %>
                                  <span class = "fa fa-star checked"></span> 
                                <% } %>
                                <span class = "fa fa-star unchecked"></span> 
                              </div>
                          </td>

                          <td>
                            <a href="" data-bs-toggle="modal" data-bs-target="#registration_modal">Ver comentarios</a>
                        </td>
                      </tr>

                      <tr>
                        <td>
                            <p>Marcela Ramos</p>
                        </td>

                        <td>
                            <p>2023-01-15</p>
                        </td>

                        <td>
                            <p>2023-01-23</p>
                        </td>

                        <td>
                            <div class="card-body">
                              <% for(i = 0; i < 3; i++){ %>
                                <span class = "fa fa-star checked"></span> 
                              <% } %>
                              <% for(i = 0; i < 2; i++){ %>
                                <span class = "fa fa-star unchecked"></span>
                              <% } %>
                            </div>
                        </td>

                        <td>
                          <a href="" data-bs-toggle="modal" data-bs-target="#registration_modal">Ver comentarios</a>
                      </td>
                    </tr>
        
                    </tbody>
                </table>
            </div>

          </div>
        </section>


