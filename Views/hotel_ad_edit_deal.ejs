<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <title>Oferta</title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg" style="background-color: #283618;">
            <div class="container">
              <div class="collapse navbar-collapse" id="navbarButtonsExample" >

                <div class="flex-shrink-0 me-4">
                  <% if (profile) { %>
                    <img src="data:image/png;base64, <%= profile %>"
                    class="img-fluid rounded-circle border border-white border-3"
                    style="width: 50px;">
                  <% } else {%>
                    <img src="/Photos/default_profile.png"
                    class="img-fluid rounded-circle border border-white border-3"
                    style="width: 50px;">
                  <% } %>
                </div>
                
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="/hotel_admins">Menú Principal</a>
                  </li>
                  <li class="nav-item me-4">
                    <a class="nav-link text-white" href="/my_account/my_profile_1">Mi perfil</a>
                  </li>
                </ul>
                
                <form method="POST" action="/logout">
                  <div class="d-flex align-items-center">
                    <button type="submit" class="btn me-3" style="background-color: #dda15e;">Cerrar sesión</button>
                  </div>
                </form>
              
              </div>
            </div>
        </nav>

        <!--------------------------------------------------------------------------------------------------------------------------->

        <section class="mb-2 mt-2">
          <div class="container">

            <a href="/hotel_admins/deal_catalog" class="btn btn-light mt-0"><span class="bi bi-arrow-left"></span></a>
            <div class="d-flex align-items-center pb-1">
              <span class="h1 fw-bold mb-3">Editar oferta</span>
            </div>

            <!-- Edición de datos de la oferta ----------------------------------------------->

            <div class="card">
                <div class="card-body">
  
                  <form onsubmit="javascript:update_deal(event, '<%= deal.id %>')" method="POST">
  
                    <div class="row">
      
                      <div class="col">
      
                        <div class="form-group mb-4">
                          <input required type="text" name="name" id="name" value="<%= deal.name %>" maxlength="100" class="form-control">
                          <label  class="form-label">Nombre</label>
                        </div>

                        <div class="form-group mb-4">
                            <input required type="date" name="start_date" id="start_date" value="<%= deal.start_date %>" class="form-control">
                            <label  class="form-label">Fecha de inicio</label>
                        </div>

                        <div class="form-group mb-4">
                            <input required type="date" name="ending_date" id="ending_date" value="<%= deal.ending_date %>" class="form-control">
                            <label  class="form-label">Fecha de fin</label>
                        </div>
      
                      </div>
      
                      <div class="col">

                        <div class="form-group mb-4">
                            <input required type="number" name="discount" id="discount" value="<%= deal.discount_rate %>" min="1" max="100" class="form-control">
                            <label  class="form-label">Porcentaje de descuento</label>
                        </div>

                        <div class="form-group mb-4">
                            <input required type="number" name="minimun_days" id="minimun_days" min="1" value="<%= deal.minimun_reservation_days %>" class="form-control">
                            <label  class="form-label">Días de reserva mínimos</label>
                        </div>
      
                      </div>
      
                    </div>
                    
                      <button type="submit" class="btn btn-dark btn-lg btn-block mb-4">Guardar</button>
                  </form>
  
                </div>
              </div>

            <!-- Edición de habitaciones de la oferta ---------------------------------------->

            <div class="row mt-4">
                <div class="col">
                  <!-- Habitaciones disponibles para la oferta --------------------------------------------->
  
                  <div class="d-flex align-items-center mb-4 pb-1">
                    <span class="h3 fw-bold mb-0">Habitaciones disponibles</span>
                  </div>
  
                  <div style="max-height: 500px; display: block; overflow: auto; position: relative;">
                    <% rooms.forEach( room => {%>
                      <div class="card mb-4" id="room-<%= room.id %>">
  
                        <div class="card-body">
                          <h5 class="card-title"><%= room.name %></h5>
                          <p class="card-text">Precio por noche: <%= room.price%>$</p>
                          <button onclick="javascript:add_room_to_deal(event, '<%= room.id %>', '<%= deal.id %>')" class="btn text-white" style="background-color: #606c38;">Agregar</button>
                        </div>

                      </div>
                      <% }) %>
                  </div>
  
                </div>
                <div class="col">
                  <!-- Habitaciones incluidas en la oferta --------------------------------------------->
  
                  <div class="d-flex align-items-center mb-4 pb-1">
                    <span class="h3 fw-bold mb-0">Habitaciones de la oferta</span>
                  </div>
  
                  <div style="max-height: 500px; display: block; overflow: auto; position: relative;">
                    <% rooms_in_deal.forEach( room => {%>
                      <div class="card mb-4">
  
                        <div class="card-body">
                          <h5 class="card-title"><%= room.name %></h5>
                          <p class="card-text">Precio recomendado: <%= room.price%>$</p>
                          <p class="card-text">Precio en oferta: <%= room.current_price%>$</p>
                          <button onclick="javascript:delete_room_from_deal(event, '<%= room.id %>', '<%= deal.id %>')" class="btn btn-danger">Eliminar</button>
                        </div>
                      </div>
                      <% }) %>
                  </div>
                </div>
              </div>


                               <!-- Pop ups de mensajes ----------------------------------------------------------------------->

                 <!-- Pop de mensage de éxito -->  
                 <div class="modal fade" id="success_alert_modal" tabindex="-1" aria-labelledby="success_alert_modal" aria-hidden="true">
                  <div class="modal-dialog">
                      <div class="alert alert-success alert-dismissible">
                          <p id="success_message"></p>
                          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                      </div>
                  </div>
               </div>

               <!-- Pop de mensage de error -->  
               <div class="modal fade" id="error_alert_modal" tabindex="-1" aria-labelledby="error_alert_modal" aria-hidden="true">
                  <div class="modal-dialog">
                      <div class="alert alert-danger alert-dismissible">
                          <p id="error_message"></p>
                          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                      </div>
                  </div>
               </div>


          </div>
        </section>

    </body>
    <script>
      
      // Envía una petición http al servidor y retorna la respuesta si hubo éxito
      function send_request(request_type, url, request_body){
            
            return new Promise(async (resolve, reject) => {

                const http = new XMLHttpRequest()
                
                http.onreadystatechange = function(){
                    
                    if (this.readyState == 4 && this.status == 200){
                        const response = JSON.parse(this.response)
                        return resolve(response)    
                    }
                }

                http.open(request_type, url)
                http.setRequestHeader("Content-Type", "application/json;charset=UTF-8")
                http.send(JSON.stringify(request_body))
            })
        }

        async function update_deal(event, deal_id){
          event.preventDefault()

          const url = "http://localhost:4500/hotel_admins/update_deal"
          const name = document.getElementById("name").value
          const start_date = document.getElementById("start_date").value
          const ending_date = document.getElementById("ending_date").value
          const discount_rate = document.getElementById("discount").value
          const minimun_days = document.getElementById("minimun_days").value
          const request_body = {deal_id: deal_id, name: name, start_date: start_date, ending_date: ending_date, discount_rate: discount_rate, minimun_days: minimun_days}
          const response = await send_request("POST", url, request_body)

          show_response(response)
        }

        // Función para registrar una oferta
        async function add_room_to_deal(event, room_id, deal_id){
          event.preventDefault()

          const url = "http://localhost:4500/hotel_admins/add_room_to_deal"
          const request_body = {deal_id: deal_id, room_id: room_id}
          const response = await send_request("POST", url, request_body)

          if (response.error){
            show_response(response)
          } else {
            location.reload()
          }
        }

        // Función para eliminar una oferta
        async function delete_room_from_deal(event, room_id, deal_id){
          event.preventDefault()

          const url = "http://localhost:4500/hotel_admins/delete_room_from_deal"
          const request_body = {deal_id: deal_id, room_id: room_id}
          const response = await send_request("POST", url, request_body)

          if (response.error){
            show_response(response)
          } else {
            location.reload()
          }
        }

                // Muestra el modal con la respuesta de una petición
        function show_response(response){

            if (!response.error){
                $('#registration_modal').modal('hide')
                $('#edition_modal').modal('hide')
            }
            
            if (response.error){
                document.getElementById("error_message").innerHTML = response.message
                $('#error_alert_modal').modal('show')
            } else {
                document.getElementById("success_message").innerHTML = response.message
                $('#success_alert_modal').modal('show')
            }
        }

        $('#success_alert_modal').on('hidden.bs.modal', function () {
            location.reload()
        })

        // Configuración de selectores de fechas

        start_date.min = new Date().toISOString().split("T")[0]
        ending_date.min = new Date().toISOString().split("T")[0]

        $('#start_date').change(function config_check_out_selector() {
          const start_date_selected = new Date((document.getElementById("start_date").value))
          ending_date.min = start_date_selected.toISOString().split("T")[0]
        })

        $('#ending_date').change(function config_check_out_selector() {
          const ending_date_selected = new Date((document.getElementById("ending_date").value))
          start_date.max = ending_date_selected.toISOString().split("T")[0]
        })
        
    </script>
</html>